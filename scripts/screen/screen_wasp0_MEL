deflogin on
autodetach on

escape ^oo

caption always

#screen 0
#title "ROS Core"
#stuff "roscore -p $PORT\015"

screen 0
title "location"
stuff "roslaunch uav_sim location_davos.launch -p $PORT\015"

screen 1
title "mms"
stuff "sleep 5; roslaunch mms mms.launch __ns:=/wasp0\015"

screen 2
title "Interaction"

screen 3
title "Mavros"
stuff "sleep 10; roslaunch mavros uniboAMSLUSB.launch __ns:=/wasp0\015"

screen 4
title "Mavros rate"
stuff "sleep 20; rosservice call /wasp0/mavros/set_stream_rate 0 12 true\015"

screen 5
title "Mavros GCS"
stuff "sleep 10; roslaunch mavros unibo_GCS.launch __ns:=/wasp0\015"

screen 6
title "Wasp Camera Usb"
stuff "sleep 5; roslaunch usb_cam camera_node.launch __ns:=/wasp0\015"

screen 7
title "Wasp Camera Handler
stuff "sleep 10; rosrun camera_handler_sherpa camera_handler_sherpa __ns:=/wasp0\015"

screen 8
title "bag"
stuff "rosbag record /wasp0/geopose /wasp0/artva_read /wasp0/sonar"

screen 9
title "bag conversion"
stuff "rostopic echo -b name.bag -p /wasp0/geopose > geopose.txt; sleep 5; rostopic echo -b name.bag -p /wasp0/artva_read > artva_read.txt; sleep 5; rostopic echo -b name.bag -p /wasp0/sonar > sonar.txt"

screen 10
title "GCS Davos"
stuff "sleep 10; rosrun gcs_davos gcs_davos __ns:=/wasp0\015"