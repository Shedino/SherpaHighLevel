<?xml version="1.0"?>

<launch>
  <arg name="tf_map_scanmatch_transform_frame_name" default="base_link"/><!--scanmatcher_frame"/-->
  <arg name="base_frame" default="base_footprint"/>
  <arg name="odom_frame" default="nav"/>
  <arg name="pub_map_odom_transform" default="true"/>
  <arg name="scan_subscriber_queue_size" default="5"/>
  <arg name="scan_topic" default="/first"/>
  <arg name="map_size" default="1000"/>
  
  <!-- static_transform_publisher args = x y z yaw pitch roll frame_id child_frame_id period_in_ms -->
  <node pkg="tf" type="static_transform_publisher" name="base_to_laser_broadcaster" args="0 0 0.12 0 0 0 /base /laser 10" /> 

  <node pkg="urg_node" type="urg_node" name="urg_node" args="_ip_address:=&quot;192.168.1.10&quot;" /> 

  <node pkg="hector_imu_attitude_to_tf" type="imu_attitude_to_tf_node" name="imu_attitude_to_tf_node" output="screen">
    <remap from="/mavros/imu/data_raw" to="thumper_imu" />
    <param name="base_stabilized_frame" type="string" value="base_stabilized" />
    <param name="base_frame" type="string" value="base_footprint" />
  </node>

  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
 
    <!-- Frame names -->
    <param name="map_frame" value="map" />
    <param name="base_frame" value="odom" /> <!--$(arg base_frame)" /-->
    <param name="odom_frame" value="odom" /> <!--$(arg odom_frame)" /-->
    
    <!-- Tf use -->
    <param name="use_tf_scan_transformation" value="true"/>
    <param name="use_tf_pose_start_estimate" value="false"/>
    <param name="pub_map_odom_transform" value="$(arg pub_map_odom_transform)"/>

    <!-- Laser measurement -->
    <param name="laser_min_dist" value="0.5"/>
    <param name="laser_max_dist " value="30.0"/>
    
    <!-- Map size / start point -->
    <param name="map_resolution" value="0.050"/>
    <param name="map_size" value="$(arg map_size)"/>
    <param name="map_start_x" value="0.2"/>
    <param name="map_start_y" value="0.5" />
    <param name="map_multi_res_levels" value="2" />
    
    <!-- Map update parameters -->
	<param name="map_pub_period" value="2"/>
    <param name="update_factor_free" value="0.25"/>
    <param name="update_factor_occupied" value="0.9" />    
    <param name="map_update_distance_thresh" value="0.4"/>
    <param name="map_update_angle_thresh" value="0.06" />
    <param name="laser_z_min_value" value = "-1.0" />
    <param name="laser_z_max_value" value = "1.0" />
    
    <!-- Advertising config --> 
    <param name="advertise_map_service" value="true"/>
    
    <param name="scan_subscriber_queue_size" value="$(arg scan_subscriber_queue_size)"/>
    <param name="scan_topic" value="$(arg scan_topic)"/>
    
    <!-- Debug parameters -->
    <!--
      <param name="output_timing" value="false"/>
      <param name="pub_drawings" value="true"/>
      <param name="pub_debug_output" value="true"/>
    -->
    <param name="tf_map_scanmatch_transform_frame_name" value="$(arg tf_map_scanmatch_transform_frame_name)" />
  </node>
   
  <!-- Original Move Base-->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">
    <param name="controller_frequency" value="1.0"/>
    <rosparam file="$(find hector_mapping)/launch/config/move_base/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find hector_mapping)/launch/config/move_base/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find hector_mapping)/launch/config/move_base/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find hector_mapping)/launch/config/move_base/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find hector_mapping)/launch/config/move_base/base_local_planner_params.yaml" command="load" />
  </node>

  <!--<node pkg="tf" type="static_transform_publisher" name="map_nav_broadcaster" args="0 0 0 0 0 0 map nav 100"/>-->
</launch>
  
  
